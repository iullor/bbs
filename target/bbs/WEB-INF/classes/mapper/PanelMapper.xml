<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gyl.mapper.PanelMapper">

    <insert id="add" parameterType="com.gyl.entity.Panel">
        insert into t_panel (id,title,create_time,logo_path,user_manager_id,info,detail,is_disabeld)
        values(#{id},#{title},#{createTime},#{logoPath},#{panelManagerId},#{info},#{detail},1);
    </insert>
    <select id="list" resultMap="listPanel">
        select * from test_bbs.t_panel  order by create_time desc ;
    </select>
    <resultMap id="listPanel" type="com.gyl.entity.Panel">
        <result property="panelManagerId" column="user_manager_id"/>
    </resultMap>
    <update id="update" parameterType="com.gyl.entity.Panel">
        update test_bbs.t_panel
        <set>
            <if test="title != null">title=#{title},</if>
            <if test="createTime != null">create_time=#{createTime},</if>
            <if test="panelManagerId != null">user_manager_id=#{panelManagerId},</if>
            <if test="logoPath != null">logo_path=#{logoPath},</if>
            <if test="info != null">info=#{info},</if>
            <if test="detail != null">detail=#{detail},</if>
        </set>
        where id=#{id};
    </update>
    <delete id="delete">
        delete from test_bbs.t_panel where id=#{pid}
    </delete>
    <select id="getPanelById" resultType="com.gyl.entity.Panel" resultMap="listPanel">
        select * from test_bbs.t_panel where id=#{pid}
    </select>

    <select id="searchByPanelTitle" resultMap="listPanel">
        select * from test_bbs.t_panel
        <trim prefix="WHERE" prefixOverrides="AND">
            <if test="title != null">
                title = #{title}
            </if>
        </trim>
        order by create_time desc;
    </select>
</mapper>